@model Entidad.Prestamo

@{
    ViewBag.Title = "ReaPago";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form action="BuscarCli" method="post">
    <div>
        <label for="dni">Ingrese DNI del Cliente</label>
        <input type="text" placeholder="12459764" id="dni" name="dni" class="form-control col-md-2" />
        <div>
            <input type="submit" id="bus" name="bus" value="Buscar Cliente" class="btn btn-default" />
        </div>
    </div>
</form>

<input type="hidden" value="@ViewBag.exito" id="inoPa" />
<input type="hidden" value="@ViewBag.v" id="v" />
@if (ViewBag.exito == 1)

{
    <div>
        <table class="table">
            <tr>
                <th>
                    Número de cuota
                </th>
                <th>
                    <p>Pago del mes</p>
                </th>
                <th>
                    Fecha de pago
                </th>
            </tr>

            @foreach (var cuota in Model.cuotas)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => cuota.periodo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => cuota.cuota)
                    </td>
                    <td>
                        @Html.ValueFor(modelItem => cuota.fechaPago, "{0:dd/MM/yyyy}")
                    </td>
                    <td>
                        @if (cuota.p == 1)
                        {
                            <a href="@Url.Action("VerificarDeudas","Pago", new {idCu=cuota.idCuota })"><input type="button" class="btn btn-dark" value="Pagar Cuota" /></a>
                        }
                    </td>
                </tr>
            }

        </table>
    </div>


}