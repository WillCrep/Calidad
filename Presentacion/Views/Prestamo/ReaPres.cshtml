@model Entidad.Prestamo
@using Entidad

@{
    ViewBag.Title = "ReaPres";
}

<form action="BuscarCli" method="post">
    <div>
        <label for="dni">Ingrese DNI del Cliente</label>
        <div>
            <input class="form-control" type="search" name="dni" placeholder="dni cliente" aria-label="Search"/>
            <button class="btn btn-outline-primary" id="busCli" type="submit">Buscar Cliente</button>
        </div>
    </div>
</form>

<input type="hidden" id="viebagExi" value="@ViewBag.exito"/>
<input type="hidden" id="viebagVal" value="@ViewBag.valido" />


    @if (ViewBag.exito == 1)
    {
        <div>
            <p>Cliente @ViewBag.cliente.idCliente @ViewBag.cliente.nombres @ViewBag.cliente.apellidos</p>
        </div>
        if (ViewBag.valido == 1)
        {
            using (Html.BeginForm("ReaPres", "Prestamo", FormMethod.Post))
            {
                @Html.AntiForgeryToken()


                <div class="form-horizontal">
                    <h4>Prestamo</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.monto, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.monto, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.monto, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.tea, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.tea, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.tea, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.cantCuotas, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.cantCuotas, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.cantCuotas, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Crear Cronograma" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        }
    }
