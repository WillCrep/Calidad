@model Entidad.Prestamo
@using Entidad

@{
    ViewBag.Title = "ReaPres";
}

<form action="BuscarCli" method="post">
    <div>
        <label for="dni">Ingrese DNI del Cliente</label>
        <input type="text" placeholder="12459764" id="dni" name="dni" class="form-control col-md-2" />
        <div>
            <input type="submit" id="bus" name="bus" value="Buscar Cliente" class="btn btn-default" />
        </div>
    </div>
</form>

@{
    if (ViewBag.exito == 1)
    {

        <p>Cliente @ViewBag.cliente.idCli @ViewBag.cliente.nombres @ViewBag.cliente.apellidos</p>
        if (ViewBag.valido)
        {
            using (Html.BeginForm("Index", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()


                <div class="form-horizontal">
                    <h4>Prestamo</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.monto, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.monto, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.monto, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.tea, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.tea, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.tea, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.cantCu, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.cantCu, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.cantCu, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
        else
        {

            <p>El Cliente no tiene permitido realizar un prestamo.</p>
        }
    }
}